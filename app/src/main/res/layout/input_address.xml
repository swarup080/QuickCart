<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/white_btn_bg"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Full Name (Required)*"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/mobileNumber"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/white_btn_bg"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Mobile Number (Required)*"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/house"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/white_btn_bg"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="House No, Building Name (Required)*"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/road"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/white_btn_bg"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Road Name, Area, Colony (Required)*"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/pincode"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/white_btn_bg"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="Pincode (Required)*"
            android:inputType="text"
            android:padding="4dp"
            android:paddingStart="10dp"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/state"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/white_btn_bg"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="State (Required)*"
            android:inputType="text"
            android:padding="4dp"
            android:paddingStart="10dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/city"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/white_btn_bg"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="City (Required)*"
            android:inputType="text"
            android:padding="4dp"
            android:paddingStart="10dp"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:text="Save" />
</LinearLayout>